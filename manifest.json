{
    "manifest_version": 3,
    "name": "Iran Local Time",
    "description": "Shows the current local time in Iran.",
    "version": "1.1",
    "permissions": [
        "idle"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}
